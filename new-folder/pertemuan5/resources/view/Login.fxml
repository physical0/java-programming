<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.gudang.controller.LoginController"
    prefWidth="200" prefHeight="300" alignment="TOP_CENTER" spacing="10">
    <children>
        <Label text="Login Aplikasi Gudang" />
        <TextField fx:id="txtUser" promptText="Username" />
        <PasswordField fx:id="txtPass" />
        <Button text="Login" onAction="#loginAction" />
        <Label fx:id="lblStatus" />
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>