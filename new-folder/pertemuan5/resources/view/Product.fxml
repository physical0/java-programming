<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gudang.controller.ProductManagement"
    stylesheets="@../css/style.css">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="472.0" prefWidth="672.0" spacing="15.0"
            styleClass="main-container">
            <children>
                <Label text="Product Management" styleClass="header-label" />
                <HBox spacing="20.0">
                    <children>
                        <VBox spacing="12.0" prefWidth="250.0">
                            <children>
                                <Label text="Product Name" styleClass="form-label" />
                                <TextField fx:id="txtName" promptText="Enter product name" />
                                <Label text="Quantity" styleClass="form-label" />
                                <TextField fx:id="txtQuantity" promptText="Enter quantity" />
                                <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#handleAdd"
                                    prefWidth="250.0" text="Add">
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#clearForm"
                                    prefWidth="250.0" text="Clear Form"
                                    styleClass="clear-button">
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </Button>
                            </children>
                        </VBox>
                        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <TableView fx:id="tableProduct" prefHeight="380.0"
                                    VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colName" prefWidth="250.0"
                                            text="Product Name" />
                                        <TableColumn fx:id="colQuantity" prefWidth="120.0"
                                            text="Quantity" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                                    <children>
                                        <Button fx:id="btnEdit" mnemonicParsing="false"
                                            onAction="#handleEdit"
                                            prefWidth="100.0" text="Edit" />
                                        <Button fx:id="btnDelete" mnemonicParsing="false"
                                            onAction="#handleDelete"
                                            prefWidth="100.0" text="Delete"
                                            styleClass="delete-button" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>