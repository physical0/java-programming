<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gudang.controller.CustomerController"
    stylesheets="@../css/style.css">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="472.0" prefWidth="672.0" spacing="15.0"
            styleClass="main-container">
            <children>
                <Label text="Customer Data" styleClass="header-label" />
                <HBox spacing="20.0">
                    <children>
                        <VBox spacing="12.0" prefWidth="250.0">
                            <children>
                                <Label text="Customer ID" styleClass="form-label" />
                                <TextField fx:id="txtId" promptText="Insert Customer ID" />
                                <Label text="Customer Name" styleClass="form-label" />
                                <TextField fx:id="txtName" promptText="Insert Customer Name" />
                                <Label text="Phone" styleClass="form-label" />
                                <TextField fx:id="txtPhone" promptText="Insert Phone Number" />
                                <Label text="Email" styleClass="form-label" />
                                <TextField fx:id="txtEmail" promptText="Insert Email Address" />
                                <HBox spacing="10.0" alignment="CENTER">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#addCustomer"
                                            prefWidth="80.0" text="Add" />
                                        <Button mnemonicParsing="false" onAction="#updateCustomer"
                                            prefWidth="80.0" text="Update" />
                                        <Button mnemonicParsing="false" onAction="#deleteCustomer"
                                            prefWidth="80.0" text="Delete"
                                        />
                                    </children>
                                    <padding>
                                        <Insets top="15.0" />
                                    </padding>
                                </HBox>
                                <Button mnemonicParsing="false" onAction="#clearForm"
                                    prefWidth="250.0" text="Clear Form" styleClass="clear-button">
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </Button>
                            </children>
                        </VBox>
                        <TableView fx:id="tableCustomer" prefHeight="400.0" prefWidth="480.0">
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                            <columns>
                                <TableColumn fx:id="colIdTitle" prefWidth="120.0" text="ID" />
                                <TableColumn fx:id="colNameTitle" prefWidth="120.0" text="Name" />
                                <TableColumn fx:id="colPhoneTitle" prefWidth="120.0" text="Phone" />
                                <TableColumn fx:id="colEmailTitle" prefWidth="120.0"
                                    text="Email" />
                            </columns>
                        </TableView>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>