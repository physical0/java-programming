<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gudang.controller.CustomerController"
    stylesheets="@../css/style.css">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="472.0" prefWidth="572.0" spacing="15.0"
            styleClass="main-container">
            <children>
                <Label text="Customer Management" styleClass="header-label" />
                <TableView fx:id="tableCustomer" prefHeight="380.0" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="colIdTitle" prefWidth="120.0" text="ID" />
                        <TableColumn fx:id="colNameTitle" prefWidth="120.0" text="Name" />
                        <TableColumn fx:id="colPhoneTitle" prefWidth="120.0" text="Phone" />
                        <TableColumn fx:id="colEmailTitle" prefWidth="120.0" text="Email" />
                    </columns>
                </TableView>
                <HBox spacing="10.0" alignment="CENTER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#showAddCustomerDialog"
                            prefWidth="120.0" text="Add Customer" />
                        <Button mnemonicParsing="false" onAction="#showEditCustomerDialog"
                            prefWidth="120.0" text="Edit Customer" />
                        <Button mnemonicParsing="false" onAction="#showDeleteCustomerDialog"
                            prefWidth="120.0" text="Delete Customer" styleClass="delete-button" />
                    </children>
                    <padding>
                        <Insets top="10.0" />
                    </padding>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>