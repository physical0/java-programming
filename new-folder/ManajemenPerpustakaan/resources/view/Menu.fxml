<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.uts.controllers.MenuController"
    prefWidth="400" prefHeight="500" alignment="CENTER" spacing="20"
    styleClass="main-container">

    <padding>
        <Insets top="30" right="40" bottom="30" left="40" />
    </padding>

    <children>
        <!-- Header -->
        <Label text="Library Management System" styleClass="page-title" alignment="CENTER">
            <font>
                <Font name="System Bold" size="24" />
            </font>
            <VBox.margin>
                <Insets bottom="30" />
            </VBox.margin>
        </Label>

        <!-- Menu Options -->
        <VBox spacing="15" alignment="CENTER" styleClass="form-container" maxWidth="300">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30" />
            </padding>

            <Label text="Main Menu" styleClass="section-header">
                <font>
                    <Font name="System Bold" size="18" />
                </font>
                <VBox.margin>
                    <Insets bottom="15" />
                </VBox.margin>
            </Label>

            <Button text="Book Management" onAction="#openBook"
                styleClass="primary-button" maxWidth="Infinity">
                <padding>
                    <Insets top="12" right="20" bottom="12" left="20" />
                </padding>
            </Button>

            <Button text="Member Management" onAction="#openMember"
                styleClass="primary-button" maxWidth="Infinity">
                <padding>
                    <Insets top="12" right="20" bottom="12" left="20" />
                </padding>
            </Button>

            <Button text="Book Borrowing" onAction="#openLoan"
                styleClass="primary-button" maxWidth="Infinity">
                <padding>
                    <Insets top="12" right="20" bottom="12" left="20" />
                </padding>
            </Button>
        </VBox>
    </children>
</VBox>