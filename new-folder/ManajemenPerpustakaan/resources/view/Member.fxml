<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" styleClass="main-container" xmlns="http://javafx.com/javafx/8"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.uts.controllers.MembersController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    <children>
        <HBox styleClass="member-management-header">
            <children>
                <Label text="Member Management" styleClass="page-title">
                    <font>
                        <Font name="System Bold" size="22" />
                    </font>
                </Label>
            </children>
        </HBox>

        <!-- Form and Table Container -->
        <HBox spacing="20" VBox.vgrow="ALWAYS">
            <!-- Form Section -->
            <VBox spacing="15" styleClass="form-container" minWidth="350" maxWidth="350">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15" />
                </padding>

                <Label text="Member Details" styleClass="section-header">
                    <font>
                        <Font name="System Bold" size="16" />
                    </font>
                </Label>

                <GridPane hgap="10" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>

                    <Label text="Member ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                        styleClass="form-label" />
                    <TextField fx:id="memberIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                        styleClass="form-field" />

                    <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                        styleClass="form-label" />
                    <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                        styleClass="form-field" />

                    <Label text="Address:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                        styleClass="form-label" />
                    <TextField fx:id="addressField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                        styleClass="form-field" />

                    <Label text="Phone Number:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                        styleClass="form-label" />
                    <TextField fx:id="phoneField" GridPane.rowIndex="3" GridPane.columnIndex="1"
                        styleClass="form-field" />
                </GridPane>

                <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="button-container">
                    <padding>
                        <Insets top="10" />
                    </padding>
                    <Button fx:id="addButton" text="Add Member" onAction="#handleAddMember"
                        styleClass="primary-button" />
                </HBox>
            </VBox>

            <!-- Table Section -->
            <VBox spacing="10" HBox.hgrow="ALWAYS" styleClass="table-container">
                <Label text="Member Directory" styleClass="section-header">
                    <font>
                        <Font name="System Bold" size="16" />
                    </font>
                </Label>

                <TableView fx:id="membersTable" VBox.vgrow="ALWAYS" styleClass="member-table">
                    <columns>
                        <TableColumn fx:id="idColumn" text="Member ID" prefWidth="80" />
                        <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
                        <TableColumn fx:id="addressColumn" text="Address" prefWidth="200" />
                        <TableColumn fx:id="phoneColumn" text="Phone Number" prefWidth="120" />
                    </columns>
                    <placeholder>
                        <Label text="No members available" />
                    </placeholder>
                </TableView>

                <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="action-buttons">
                    <Button fx:id="editButton" text="Edit" onAction="#handleEditMember"
                        styleClass="secondary-button" />
                    <Button fx:id="deleteButton" text="Delete" onAction="#handleDeleteMember"
                        styleClass="delete-button" />
                </HBox>
            </VBox>
        </HBox>
    </children>
</VBox>